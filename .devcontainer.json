{
    "dockerFile": "Dockerfile",
    "remoteUser": "ubuntu",
    "postCreateCommand": ["git", "config", "core.hooksPath", "hooks"],
    "remoteEnv": {"EDITOR": "code -w"},
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "cschlosser.doxdocgen",
                "llvm-vs-code-extensions.vscode-clangd"
            ]
        }
    }
}