{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/runtests",
            "args": ["--gtest_filter=${input:test_suite}.${input:test_case}"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Source custom pretty printers",
                    "text": "source ${workspaceFolder}/tools/array_printer.py",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Examples",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/${input:example}/${input:example}",
            "args": ["${input:lenet_weights}", "${input:lenet_data}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/examples/${input:example}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ],
    "inputs": [{
        "id": "test_suite",
        "type": "promptString",
        "description": "Test Suite"
    }, {
        "id": "test_case",
        "type": "promptString",
        "description": "Test Case"
    }, {
        "id": "example",
        "type": "pickString",
        "options": ["image-processing", "lenet"],
        "description": "Example Name"
    }, {
        "id": "args",
        "type": "promptString",
        "description": "Arguments"
    }, {
        "id": "lenet_weights",
        "type": "promptString",
        "description": "Weights path"
    }, {
      "id": "lenet_data",
      "type": "promptString",
      "description": "Data path"
    }]
}